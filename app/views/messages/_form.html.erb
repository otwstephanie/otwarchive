<section id="ao3_mailbox">(class = "#{mailbox_name}")
  <h2>
    <%= mailbox_name.humanize %>
  </h2>
  <%= render 'shared/nav' %>
  <div class="compose message">
    <%= simple_form_for @message do |f| %>
        <% if @message.errors.any? %>
            <p class="errors">This message has #{pluralize(@message.errors.count, 'error')}</p>
        <% end %>
        <%= f.input :recipient_ids, collection: recipients, input_html: {class: 'chosen', multiple: true}, label: 'Recipients' %>
            <%= f.input :subject %>
            <%= f.input :body, required: false, label: 'Your message' %>
            <%= f.input :draft, as: :boolean %>
            <%= f.submit 'Send message' %>
        <% end %>
  </div>
</section>
