<!--Descriptive page name, messages and instructions-->
<h2 class="heading"><%= ts("Finalize Account Import") %></h2>
<% if @user.errors.any? %>
    <div class="error">
      <h4 class="heading"><%= ts("Oops, there's some problems with the stuff you told us.") %></h4>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
<!--/descriptions-->

<!--main content-->
<!-- TODO add ajax -->

<%= form_tag finalize_import_user_path(@user) do |f| %>
    <fieldset>
      <legend><%= ts("User Details") %></legend>
      <%= render :partial => "passwd_only", :locals => {:f => f} %>
    </fieldset>
    <fieldset>
      <legend><%= ts("Legal Agreements") %></legend>
      <%= render :partial => "legal", :locals => {:f => f} %>
    </fieldset>

    <fieldset>
      <legend><%= ts("Submit") %></legend>
      <p class="submit cancel actions">
        <input type="submit" name="cancel_create_account" value="Cancel"/>
        <%= submit_tag ts('Finalize') %>
      </p>
    </fieldset>
<% end %>
<!--/content-->

<%= content_for :footer_js do %>
    <%= javascript_tag do %>
        $j(document).ready(function(){
        $j('#user_registration_form').preventDoubleSubmit();
        })
    <% end %>
<% end %>
